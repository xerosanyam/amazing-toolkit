{
  "name": "@xerosanyam/amazing-toolkit",
  "version": "1.0.6",
  "description": "A nice toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm version patch",
    "preversion": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xerosanyam/amazing-toolkit.git"
  },
  "keywords": [
    "toolkit",
    "hackathon",
    "office"
  ],
  "author": "xerosanyam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xerosanyam/amazing-toolkit/issues"
  },
  "homepage": "https://github.com/xerosanyam/amazing-toolkit#readme",
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/nodemailer": "^6.4.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "amplitude": "^4.0.0",
    "axios": "^0.19.1",
    "firebase-admin": "^8.9.1",
    "nodemailer": "^6.4.16"
  }
